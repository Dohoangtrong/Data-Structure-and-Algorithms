#include <bits/stdc++.h>
using namespace std;

int main(){
	int t;
	cin >> t;
	while(t--){
		map< int , set<int> > mp;
		int m, n;
		cin >> m >> n;
		int a, b;
		for ( int i = 0; i < n; i++){
			cin >> a >> b;
			mp[a].insert(b);
			mp[b].insert(a);
			
		}
		map< int, set<int> >::iterator it;
    	for (it = mp.begin(); it != mp.end(); it++) {
        	cout << it->first << ": " ;
        	for ( auto &x : it->second ){
        		cout << x << " ";
			}
			cout << endl;
   	 	}
   	 	cout << endl;
	}
}



