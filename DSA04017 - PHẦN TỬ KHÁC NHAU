#include <bits/stdc++.h>
using namespace std;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while(t--){
    	int n;
    	cin >> n;
    	int arr[n];
    	for ( int i = 0; i < n; i++){
    		cin >> arr[i];
		}
		int brr[n-1], pos;
		for ( int i = 0; i < n-1; i++){
			cin >> brr[i];
		}
		for ( int i = 0; i < n; i++){
			if ( brr[i] != arr[i] ){
				pos = i+1;
				break;
			}
		}
		cout << pos << endl;
	}
    
}
